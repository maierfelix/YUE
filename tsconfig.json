{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "rollup.config.js"
  ],
  "typeRoots": [
    "./node_modules/@webgpu/types/"
  ]
}